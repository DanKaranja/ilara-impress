<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      i18n:domain="senaite" >
  <head>
    <meta charset="UTF-8">
    <title i18n:translate="">Print Preview</title>

    <!-- CSS -->
    <tal:css define="portal context/@@plone_portal_state/portal;">
      <link type="text/css"
            href="bootstrap.css"
            rel="stylesheet"
            tal:attributes="href string:${portal/absolute_url}/++resource++senaite.publisher.static/css/bootstrap.min.css"/>
      <link type="text/css"
            href="print.css"
            rel="stylesheet"
            tal:attributes="href string:${portal/absolute_url}/++resource++senaite.publisher.static/css/print.css"/>
      <!-- <style type="text/css"
           tal:content="view/css">
           </style> -->
    </tal:css>

    <!-- JavaScripts -->
    <tal:js define="portal context/@@plone_portal_state/portal;">
      <script type="text/javascript"
              src="senaite.publisher.printview.js"
              tal:attributes="src string:${portal/absolute_url}/++resource++senaite.publisher.static/js/dist/senaite.publisher.barcodes.js"></script>
      <script type="text/javascript"
              src="senaite.publisher.printview.js"
              tal:attributes="src string:${portal/absolute_url}/++resource++senaite.publisher.static/js/dist/senaite.publisher.printview.js"></script>
    </tal:js>
  </head>

  <body tal:define="format view/paperformat"
        tal:attributes="class string:${format/format} ${format/orientation}">

    <div class="container">
      <form id="printform"
            name="printform"
            method="post">

        <div class="jumbotron">
          <div class="form-group">
            <div class="input-group">
              <button id="download" class="btn btn-outline-success">Download</button>
              <select class="custom-select" id="paperformats">
                <tal:option tal:repeat="format python:view.get_paperformats().values()">
                  <option tal:content="format/name"
                          tal:attributes="value format/format;
                                          selected python:format['format'] == 'A4'"></option>
                </tal:option>
              </select>
              <div class="input-group-prepend">
                <select class="custom-select" id="orientation">
                  <option value="portrait" selected>Portrait</option>
                  <option value="landscape">Landscape</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <input type="hidden" name="html" value="" />
        <input type="hidden" name="submitted" value="1" />
      </form>

      <!-- Report preview images are rendered here -->
      <div id="preview" class="text-center">Loading, please wait...</div>

      <!-- Processed report HTML from the selected template -->
      <div id="reports" style="display:none;">
        <div tal:repeat="report view/reports"
             tal:attributes="id report/id;
                         uid report/UID;
                         class string:${format/format} ${format/orientation} report">
          <div tal:replace="structure python:view.render_report(report)"/>
        </div>
      </div>

    </div>

  </body>
</html>
