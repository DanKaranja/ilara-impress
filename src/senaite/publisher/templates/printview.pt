<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      i18n:domain="senaite" >
  <head>
    <meta charset="UTF-8">
    <title i18n:translate="">Print</title>

    <!-- CSS -->
    <tal:css define="portal context/@@plone_portal_state/portal;">
      <link type="text/css"
            href="print.css"
            rel="stylesheet"
            tal:attributes="href string:${portal/absolute_url}/++resource++senaite.publisher.static/css/print.css"/>
    </tal:css>

    <!-- JavaScripts -->
    <tal:js define="portal context/@@plone_portal_state/portal;">
      <script type="text/javascript"
              src="senaite.publisher.printview.js"
              tal:attributes="src string:${portal/absolute_url}/++resource++senaite.publisher.static/js/dist/senaite.publisher.barcodes.js"></script>
      <script type="text/javascript"
              src="senaite.publisher.printview.js"
              tal:attributes="src string:${portal/absolute_url}/++resource++senaite.publisher.static/js/dist/senaite.publisher.printview.js"></script>
    </tal:js>
  </head>

  <body>
    <div id="preview"></div>

    <div id="reports" style="display:none;">
      <div class="report" tal:repeat="report view/get_reports">
        <div tal:replace="structure report"/>
      </div>
    </div>
  </body>

</html>
